@model WeatherForecastViewModel

<div class="d-flex justify-content-center mt-5">
    @if (Model == null)
    {
        <h3>@ViewBag.Error</h3>
    }
    else
    {
        if (ViewBag.ToNotifyAboutRain)
        {
            <div class="container mb-3">
                <div class="alert alert-danger" role="alert">
                    It is raining today. Be carefull!
                </div>
            </div>
        }
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">@Model.City</h3>

                <img src="@Model.IconUrl" class="card-img" />

                <h4 class="card-subtitle mb-2 text-body-secondary">@Model.Description</h4>

                <table class="table">
                    <tbody>
                        <tr>
                            <td class="card-text">
                                Temperature:
                            </td>
                            <td class="card-text">
                                @Model.Temperature &#8451
                            </td>
                        </tr>
                        <tr>
                            <td class="card-text">
                                Min temperature:
                            </td>
                            <td class="card-text">
                                @Model.MinTemperature &#8451
                            </td>
                        </tr>
                        <tr>
                            <td class="card-text">
                                Max temperature:
                            </td>
                            <td class="card-text">
                                @Model.MaxTemperature &#8451
                            </td>
                        </tr>
                        <tr>
                            <td class="card-text">
                                Pressure:
                            </td>
                            <td class="card-text">
                                @Model.Pressure hPa
                            </td>
                        </tr>
                        <tr>
                            <td class="card-text">
                                Humidity:
                            </td>
                            <td class="card-text">
                                @Model.Humidity %
                            </td>
                        </tr>
                        <tr>
                            <td class="card-text">
                                Cloud:
                            </td>
                            <td class="card-text">
                                @Model.Cloud %
                            </td>
                        </tr>
                        <tr>
                            <td class="card-text">
                                Wind:
                            </td>
                            <td class="card-text">
                                @Model.WindSpeed m/s
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>